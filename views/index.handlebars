<div class="content">
	<h1>Eat-Da-Burger</h1>
	<div id="img-div">
		<img src="assets/img/burger.png">
	</div>
	<div class="burger-container">
		<div id="devour-container">
			<p>To Devour:</p>
			<ol>
				{{#each burgers}}
					{{#unless devoured}}
						<li>{{burger_name}}
						<button class="devour" data-id="{{id}}">Devour it!</button></li>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
		<div id="eaten-container">			
			<p>Devoured:</p>
			<ol>
				{{#each burgers}}
					{{#if devoured}}
						<li>{{burger_name}}
						<button class="delete" data-id="{{id}}">Delete Burger</button></li>
					{{/if}}
				{{/each}}
			</ol>
		</div>

	</div>
	<div id="form-box">
		<form class="create-form">
			<div class="form-group">
			    <label for="burger-type"></label>
			    <input type="text" id="burger-type" name="name">

			</div>

			<button id="submit-button" type="submit">Submit</button>
			<p id="submit-text">Enter the type of burger you want to grub on and hit "Submit"!</p>
		</form>
	</div>

</div>