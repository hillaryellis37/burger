<div class="content">
	<h1>Eat-Da-Burger</h1>
	<img src="assets/img/burger.png">
	<div class="burger-container">
		<div id="devour-container">
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						{{burger_name}}
						<button>Devour</button>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div id="eaten-container">
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{burger_name}}
						<button>Delete</button>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>
	
	<form class="create-form">

		<div class="form-group">
		    <label for="burger-type"></label>
		    <input type="text" id="burger-type" name="name">
		</div>


		<button type="submit">Submit</button>
	</form>

</div>