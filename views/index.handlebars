<div class="content">
	<h1>Eat-Da-Burger</h1>
	<img src="assets/img/burger.png">
	<div class="burger-container">
		<div id="devour-container">
			<p>To Devour</p>
			<ol>
				{{#each burgers}}
					{{#unless devoured}}
						<li>{{burger_name}}
						<button class="devour" data-id="{{id}}">Devour</button></li>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
		<div id="eaten-container">			
			<p>Devoured</p>
			<ol>
				{{#each burgers}}
					{{#if devoured}}
						<li>{{burger_name}}</li>
						<button>Delete</button>
					{{/if}}
				{{/each}}
			</ol>
		</div>

	</div>
	
	<form class="create-form">

		<div class="form-group">
		    <label for="burger-type"></label>
		    <input type="text" id="burger-type" name="name">
		</div>


		<button type="submit">Submit</button>
	</form>

</div>